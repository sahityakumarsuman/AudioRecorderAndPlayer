<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Gray" parent="AppTheme">
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/md_blue_gray_700
        </item>
        <item name="android:windowBackground">@drawable/gradient_gray</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/md_blue_gray_700
        </item>
    </style>


    <style name="AppTheme.Teal" parent="AppTheme">
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/md_teal_700</item>
        <item name="android:windowBackground">@drawable/gradient_teal</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/md_teal_700</item>
    </style>


    <style name="Button">
        <item name="android:textColor">@color/md_yellow_800F</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Widget" parent="@android:style/Widget" />

    <style name="Widget.RaisedButton" parent="@android:style/Widget.Material.Button" tools:targetApi="lollipop">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#414141</item>
        <item name="android:background">@drawable/raised_button_background</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_xmedium</item>
        <item name="android:paddingLeft">@dimen/spacing_double</item>
        <item name="android:paddingRight">@dimen/spacing_double</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.BorderlessButton" parent="@android:style/Widget.Material.Button.Borderless" tools:targetApi="lollipop">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#414141</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title" tools:targetApi="lollipop">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Body1" tools:targetApi="lollipop">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Text.NormalLabel" parent="Text">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.SectionLabel">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

</resources>
